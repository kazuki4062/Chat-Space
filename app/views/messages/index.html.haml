.wrapper
  = render 'shared/side_bar'
  .chat
    .header
      .left-header
        .left-header__title
          = @group.name
        %ul.left-header__members
          Memberï¼š
          - @group_users.each do |group_user|
            %li.member
              = User.find(group_user.user_id).name
      .right-header
        = link_to edit_group_path(params[:group_id]) do
          .right-header__button
            Edit
    .messages
      .message
        - @group.messages.each do |message|
          .upper-message
            .upper-message__user-name
              = User.find(message.user_id).name
            .upper-message__date
              = message.updated_at.in_time_zone('Tokyo').strftime('%Y/%m/%d(%a) %H:%M:%S')
          .lower-meesage
            .lower-message__content
              = message.content
    .form
      = form_for [@group, @message], remote: true do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
